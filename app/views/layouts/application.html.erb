<!DOCTYPE html>
<html>
  <head>
    <title>PhotogramFinal</title>
    <%= csrf_meta_tags %>

    <!-- Expand the number of characters we can use in the document beyond basic ASCII ðŸŽ‰ -->
    <meta charset="utf-8">

    <!-- Make it responsive to small screens -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
  </head>

  <body>
    <%= alert %>
    <%= notice %>
    <% if @current_user == nil %>
      <ul>
        <li>
          <a href="/users">
            All users
          </a>
        </li>
        
        <li>
          <a href="/photos">
            All public photos
          </a>
        </li>

          <li>
            <a href="/user_sign_in">
              Sign in
            </a>
          </li>

          <li>
            <a href="/user_sign_up">
              Sign up
            </a>
          </li>
      </ul>
    <% else %>
      <ul>
        <li>
          <a href="/users">
            All users
          </a>
        </li>
        
        <li>
          <a href="/photos">
            All public photos
          </a>
        </li>

         <li>
           <a href="/edit_user_profile">
             <%= @current_user.username %>
          </a>
         </li>

        <li>
          <a href="/user_sign_out">
            Sign out
          </a>
        </li>
      </ul>
    <% end %>
    <%= yield %>
  </body>
</html>
